extends layout
block content
    .row
      .holder
        h1 Hi I am the product page!
        .grid-container
          each row in res1
            .item
              h1.itemtitle #{row.Name}
              img.pimage(src="#{row.Image}", alt="#{row.Image}")
              p.itemp &euro;#{row.Price}
              p.itemp Activity: #{row.Activity}
              a.button(href="/item/#{row.Id}") Show
              a.button(href="/edit/#{row.Id}") Edit
              a.button(href="/delete/#{row.Id}") Delete