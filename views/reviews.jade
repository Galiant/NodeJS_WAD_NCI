extends layout
block content
    .row
      .holder
        h1 Hi I am the reviews page!
          .grid-container
            each review in reviews
              .item
                h1.itemtitle #{review.name}
                p.itemp #{review.content}
                a.button(href="/editreviews/#{review.id}") Edit #{review.Name}
                a.button(href="/deletereviews/#{review.id}") Delete #{review.id}